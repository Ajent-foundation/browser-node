{
	"compilerOptions": {
		"target": "ES2020",
        "module": "CommonJS",
        "outDir": "build",
        "rootDir": "src",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strict": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "noImplicitAny": true,
		"skipLibCheck": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"test/**/*"
	]
}