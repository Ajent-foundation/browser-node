<?xml version="1.0" encoding="UTF-8"?>
<openbox_menu xmlns="http://openbox.org/3.4/menu">
  <menu id="root-menu" label="Applications">
    <!-- Internet -->
    <menu id="internet-menu" label="Internet">
      <item label="Google Chrome">
        <action name="Execute">
          <command>google-chrome</command>
        </action>
      </item>
    </menu>
    
    <!-- Office -->
    <menu id="office-menu" label="Office">
      <item label="LibreOffice Writer">
        <action name="Execute">
          <command>libreoffice --writer</command>
        </action>
      </item>
    </menu>
    
    <!-- Graphics -->
    <menu id="graphics-menu" label="Graphics">
      <item label="GIMP Image Editor">
        <action name="Execute">
          <command>gimp</command>
        </action>
      </item>
      <item label="Image Viewer">
        <action name="Execute">
          <command>eog</command>
        </action>
      </item>
    </menu>
    
    <!-- Multimedia -->
    <menu id="multimedia-menu" label="Multimedia">
      <item label="VLC Media Player">
        <action name="Execute">
          <command>vlc</command>
        </action>
      </item>
    </menu>
    
    <!-- System Tools -->
    <menu id="system-menu" label="System Tools">
      <item label="File Manager">
        <action name="Execute">
          <command>pcmanfm</command>
        </action>
      </item>
      <item label="System Monitor">
        <action name="Execute">
          <command>gnome-system-monitor</command>
        </action>
      </item>
      <item label="Calculator">
        <action name="Execute">
          <command>gnome-calculator</command>
        </action>
      </item>
      <item label="Screenshot">
        <action name="Execute">
          <command>gnome-screenshot</command>
        </action>
      </item>
    </menu>
    
    <!-- Accessories -->
    <menu id="accessories-menu" label="Accessories">
      <item label="Text Editor">
        <action name="Execute">
          <command>mousepad</command>
        </action>
      </item>
      <item label="Terminal">
        <action name="Execute">
          <command>gnome-terminal</command>
        </action>
      </item>
      <item label="XTerm">
        <action name="Execute">
          <command>xterm</command>
        </action>
      </item>
      <item label="PDF Viewer">
        <action name="Execute">
          <command>evince</command>
        </action>
      </item>
    </menu>
    
    <!-- Separator -->
    <separator />
    
    <!-- Window Management -->
    <item label="Reconfigure">
      <action name="Reconfigure" />
    </item>
    
    <separator />
    
    <item label="Exit">
      <action name="Exit">
        <prompt>yes</prompt>
      </action>
    </item>
  </menu>
</openbox_menu>
